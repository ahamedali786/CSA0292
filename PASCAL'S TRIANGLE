#include <stdio.h> 
int main() 
{ 
int rows = 5,c=1,i,j,k; 
for (i = 1; i <= rows; i++) 
{ 
for (j = 0; j < rows - i; j++) 
{ 
printf(" "); 
}
int C = 1; 
for (k = 1; k <= i; k++) 
{ 
printf("%d ", C); 
C = C * (i - k) / k; 
} 
printf("\n"); 
} 
return 0; 
}
OUTPUT:

    1 
   1 1 
  1 2 1 
 1 3 3 1 
1 4 6 4 1
